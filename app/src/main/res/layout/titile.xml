<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title_updatetime"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/nav_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/title_updatetime"
        app:backgroundTint="#84E6E6E6"
        android:background="@drawable/plus"/>
    <TextView
        android:id="@+id/title_updatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_city"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="16sp"/>
<!--    <Button-->
<!--        android:id="@+id/fresh_button"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:layout_marginEnd="15dp"-->
<!--        app:backgroundTint="#84E6E6E6"-->
<!--        app:layout_constraintEnd_toStartOf="@id/settings_button"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/title_updatetime"-->
<!--        android:background="@drawable/fresh"/>-->
    <Button
        android:id="@+id/settings_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:backgroundTint="#84E6E6E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/title_updatetime"
        android:background="@drawable/settings"/>
</androidx.constraintlayout.widget.ConstraintLayout>